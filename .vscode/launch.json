{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server (ts-node)",
      "program": "${workspaceFolder}/src/app.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "outFiles": ["${workspaceFolder}/src/**/*.ts"]
    }
  ]
}